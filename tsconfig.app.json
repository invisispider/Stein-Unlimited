{
  "extends": "./tsconfig.web.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "types/**/*.d.ts", 
    "src/**/*.vue",
    "__tests__/vitest/**/*"
  ],
  "exclude": ["src/**/*.bak", "archive/**"],
  "compilerOptions": {
    "types": ["node", "jsdom"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~types/*": ["./types/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
